  <arg name="increment"     default= "0.01745"/>  -->

  <!-- testing angles   -->
  <!-- <arg name="angle_min"     default= "1.5707963267948966"/>  
  <arg name="angle_max"     default= "7.85398163397"/>  
  <arg name="increment"     default= "0.01745"/>  -->
  
  <param name="angle_min"       value="$(arg angle_min)"/>
  <param name="angle_max"       value="$(arg angle_max)"/>  
  <param name="increment"       value="$(arg increment)"/>
  

<!-- publish new scan topic -->
  <node pkg="arena_local_planner_drl" type="scan_mapping.py" name="scanmapper" output="screen">
  </node>
