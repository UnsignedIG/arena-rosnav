<launch>
<!-- 
  change scan angles for 
  RLCA: {min: 0, max: 6.28319, increment: 0.01745330555} [min: -1.5707963267948966, max: 1.5707963267948966]
  ARENA: {min: -3.12413936, max: 3.14159265359, increment: 0.01745}
  DRL: {min: -1.5707963267948966, max: 4.694936014, increment:  0.017453292}
-->
  <!-- turtlebot angles starting from infront of turtlebot and going counterclockwise   -->
  <!-- <arg name="angle_min"     default="0.0"/>  
  <arg name="angle_max"     default= "6.2657318115234375"/>  
  <arg name="increment"     default= "0.01745329238474369"/>    -->

  <!-- DRL angles   -->
  <arg name="angle_min"     default= "-1.5707963267948966"/>  
  <arg name="angle_max"     default= "4.694936014"/>  
  <arg name="increment"     default= "0.017453292"/> 

  <!-- ARENA angles   -->
  <!-- <arg name="angle_min"     default= "-3.12413936"/>  
